{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Species",
  "version": "0.0.1",
  "type": "object",
  "properties": {
    "code": {
      "type": "string",
      "minLength": 4,
      "maxLength": 4,
      "pattern": "^[A-Z]{4}$",
      "description": "4-letter species code (e.g. ACER)"
    },
    "genus": {
      "type": "string",
      "minLength": 1,
      "description": "Genus name"
    },
    "specificEpithet": {
      "type": "string",
      "minLength": 1,
      "description": "Specific epithet (second part of the binomial name)"
    },
    "commonName": {
      "type": "string",
      "description": "Common name"
    },
    "createdBy": {
      "type": "string",
      "description": "GitHub username of the creator",
      "readOnly": true
    },
    "_schemaVersion": {
      "type": "string",
      "description": "The schema version used when this record was created/updated",
      "readOnly": true
    }
  },
  "required": [
    "code",
    "genus",
    "specificEpithet"
  ],
  "additionalProperties": false
}